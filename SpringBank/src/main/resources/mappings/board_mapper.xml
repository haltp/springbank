<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.company.temp.service.impl.BoardMapper">
	<insert id="insertBoard" parameterType="BoardsVO">
		<selectKey keyProperty="seq" resultType="string" order="BEFORE">
			SELECT NVL(MAX(SEQ), 0) + 1 FROM BOARD2
		</selectKey>
		insert into Board2(
		seq
		, title
		, writer
		, content
		, filename)
		values(#{seq}
		, #{title}
		, #{writer}
		, #{content}
		, #{filename})
	</insert>
	
	<select id="getBoard" parameterType="BoardsVO" resultType="boardsVO">
		select * from Board2 where seq = #{seq}
	</select>
</mapper>